    <!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Socket.io</title>

        <script>
            /*jshint strict: false*/
            /* jshint node: true */
        </script>
        <style type="text/css">
            #like, #unlike:hover {
                color: #FA5858;
            }
            #like:hover, #unlike {
                color: #DF0101;
            }
            #unlike {
                display: none;
            }
        </style>
    </head>
 
    <body>
        <h1>Communication avec socket.io !</h1>
        <section id="id"><%= citation._id %></section>
        <section id="auteur"><%= citation.auteur %></section>
        <section id="texte"><%= citation.texte %></section>
        <section id="date"><%= citation.date %></section>
        <span id="nombreLikes"><%= citation.nombreLikes %></span>
        <span id="like">&#10084;</span>
        <span id="unlike">&#10084;</span>


        <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
        <script src="/socket.io/socket.io.js"></script>
        <script>
            var socket = io.connect('http://localhost:8080');

            $('#like').click(function () {
                socket.emit('like', $('#id').text());
                $('#like,#unlike').toggle("slow");
            });

            $('#unlike').click(function () {
                socket.emit('unlike', $('#id').text());
                $('#like,#unlike').toggle("slow");
            });

            socket.on('modifierNombreLikes', function(nombreLikes) {
                $('#nombreLikes').text(nombreLikes);
            });

        </script>
    </body>
</html>