    <!-- grayscale while big button play not clicked -->
    <div id="wrapper">

        <!-- menu -->
        <div id="header">
                <% include ../partials/header %>
        </div>

        <!-- contact form (modal popup) -->
        <div id="contact">
          <div class="modal-dialog">
            <div class="modal-content">
              <header class="modal-container"> 
                <a href="#" class="modal-close">×</a>
                <h2>Please tell us</h2>
              </header>
              <div class="modal-container">
                <p>share</p>
                <p>your email</p>
              </div>
              <footer class="modal-container">
              </footer>
            </div>
          </div>
        </div>

        <!-- login form (modal popup) -->
        <div id="login">
          <div class="modal-dialog">
            <div class="modal-content">
              <header class="modal-container"> 
                <a href="#" class="modal-close">×</a>
                <h2>Please log in</h2>
              </header>
              <div class="modal-container">
                  <form action="/login" method="post">
                    <input type="text" id="email" size="40" placeholder="Type your email" name="email"><br />
                    <input type="password" id="password" size="40" placeholder="Type your password" name="password"><br />
                    <input type="submit" value="Submit" id="submit">
                  </form>
              </div>
              <footer class="modal-container">
              </footer>
            </div>
          </div>
        </div>

        <!-- containing playlist or quotes -->
        <div id="content">

            <!-- wrapper to achieve 100% width -->
            <div class="container-fluid" id="content-container">
                
                <!-- hidden div to perform vertical aligmnent -->
                <div class="v-align"></div>

                <!-- div displayed when user click on blabla -->
                <div class="row text-center" id="read">
                    <div class="col-lg-12">
<!--                         <div class="v-align"></div> -->
                        <div id="quote">

    <!--                     <div class="well "> -->
                            <section id="quote-id"><%= quote._id %></section>
                            <p id="quote-content"><%= quote.content %></p>
                            <section id="quote-author"><%= quote.author %></section>
                            <section id="quote-date"><%= quote.date %></section>
                            <span id="quote-unlike" style="<%= quote.liked ? 'display:inline;' : 'display:none;' %>"><i class="fa fa-heart" aria-hidden="true"></i></span>
                            <span id="quote-like" style="<%= quote.liked ? 'display:none;' : 'display:inline;' %>"><i class="fa fa-heart" aria-hidden="true"></i></span>
                            <span id="quote-likes"><%= quote.likes %></span> likes
                            <span id="quote-next"><i class="fa fa-chevron-right" aria-hidden="true"></i></span>
                        </div>
                    </div>
                </div>
                
             <div class="row text-center noselect" id="playlist">
            </div>        
