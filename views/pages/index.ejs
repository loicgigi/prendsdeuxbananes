        </div> <!-- content -->
        <div id="footer">

            <!-- custom wrapper to achieve 100% width -->
            <div class="container-full">       
                <div class="row text-center" id="player-controls">
                    <div class="col-xs-5">
                        <span id="track-playlist"><i class="fa fa-bars fa-2x" aria-hidden="true"></i></span>
                    </div>
                    <div class="col-xs-2">
                        <span id="track-play-pause"><i class="fa fa-play fa-2x" aria-hidden="true"></i></span>
                    </div>
                    <div class="col-xs-5">
                        <span id="track-next"><i class="fa fa-step-forward fa-2x" aria-hidden="true"></i></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="player">
                            <!-- progressbar and label (title and artist) overlaping -->
                            <span id="progresslabel" class="noselect"></span>
                            <progress id="progressbar" value="0" max="1"></progress>
                        </div>
                    </div>
                </div>
            </div>
            <% include ../partials/footer %>
